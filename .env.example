# Avisa API (recomendado: token fica no backend via AVISA_API_TOKEN)
AVISA_API_BASE_URL=https://www.avisaapi.com.br/api
AVISA_API_TOKEN=replace-me

# Supabase (backend)
SUPABASE_URL=replace-me # project url
SUPABASE_ANON_KEY=replace-me # api key (public/anon)
SUPABASE_SERVICE_ROLE_KEY=replace-me # service_role (NUNCA expor no frontend)
SUPABASE_USERS_TABLE=usuarios
SUPABASE_REPORTS_TABLE=relatorios

# Sessão do app (backend) - segredo para assinar tokens de login
AUTH_SESSION_SECRET=replace-me

# (Opcional) Chamada direta do frontend para a Avisa API (não recomendado; expõe token no build do frontend)
VITE_UAZAPI_BASE_URL=
VITE_UAZAPI_TEXT_URL=
VITE_UAZAPI_MEDIA_URL=
VITE_UAZAPI_TOKEN=

# Frontend chama este endpoint para obter URLs assinadas (presign). Se não configurar, usa `/api/s3/presign`.
VITE_S3_PRESIGN_URL=/api/s3/presign

# S3 (AWS / S3-compatible)
# Para AWS, S3_ENDPOINT pode ficar vazio (SDK usa padrão da região). Para Hetzner/MinIO, preencha o endpoint.
S3_ENDPOINT=
S3_REGION=sa-east-1
S3_BUCKET=replace-me
S3_ACCESS_KEY_ID=replace-me
S3_SECRET_ACCESS_KEY=replace-me
S3_PUT_EXPIRES_SECONDS=600
S3_GET_EXPIRES_SECONDS=86400
